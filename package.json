{
  "name": "online-banking-frontend",
  "version": "0.6.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@reduxjs/toolkit": "^1.9.1",
    "bootstrap": "^5.2.3",
    "node-sass": "^8.0.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.0",
    "react-data-table-component": "^7.5.3",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-bootstrap": "^0.26.2",
    "react-router-dom": "^6.6.1",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "DISABLE_ESLINT_PLUGIN='true' REACT_APP_VERSION=$npm_package_version react-scripts build",
    "test": "react-scripts test",
    "test:ci": "npm run test -- --testResultsProcessor=\"jest-junit\"",
    "eject": "react-scripts eject",
    "coverage": "CI=true react-scripts test --coverage",
    "eslint": "npx eslint .",
    "fixeslint": "npx eslint . --fix",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "jest-junit": "^15.0.0",
    "msw": "^0.49.2",
    "npm-check-updates": "^16.6.2"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.js",
      "!**/__mocks__/**",
      "!**/__test-utils__/**",
      "!**/utils/calls/aws.js"
    ],
    "collectCoverageFrom": [
      "!<rootDir>/src/__tests__/__snapshots__/*.snap",
      "!<rootDir>/src/utils/calls/aws.js"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./report"
  }
}
